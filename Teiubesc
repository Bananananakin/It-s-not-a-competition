    <title>Pop the Hearts Game</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap');

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }

        .game-container {
            position: relative;
            width: 300px;
            height: 300px;
        }

        .heart {
            position: absolute;
            width: 50px;
            height: 50px;
            background-color: #ff69b4; /* Intense pink */
            transform: rotate(-45deg);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            cursor: pointer;
        }

        .heart::before,
        .heart::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 50px;
            background-color: #ff69b4; /* Intense pink */
            border-radius: 50%;
        }

        .heart::before {
            top: -25px;
            left: 0;
        }

        .heart::after {
            top: 0;
            left: -25px;
        }

        .big-heart {
            display: none;
            width: 100px;
            height: 100px;
            background-color: #ff69b4; /* Intense pink */
            transform: rotate(-45deg);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .big-heart::before,
        .big-heart::after {
            content: '';
            position: absolute;
            width: 100px;
            height: 100px;
            background-color: #ff69b4; /* Intense pink */
            border-radius: 50%;
        }

        .big-heart::before {
            top: -50px;
            left: 0;
        }

        .big-heart::after {
            top: 0;
            left: -50px;
        }

        .message {
            display: none;
            position: absolute;
            top: 50%;
            left: 110%;
            transform: translateY(-50%);
            font-family: 'Poppins', sans-serif;
            font-size: 24px;
            font-weight: 600;
            color: #ff69b4;
        }

        .big-heart.active ~ .message {
            display: block;
        }
    </style>
</head>
<body>
    <div class="game-container">
        <div class="heart small-heart" id="heart1" style="top: 50px; left: 50px;"></div>
        <div class="heart small-heart" id="heart2" style="top: 100px; left: 150px;"></div>
        <div class="heart small-heart" id="heart3" style="top: 150px; left: 50px;"></div>
        <div class="heart small-heart" id="heart4" style="top: 200px; left: 150px;"></div>
        <div class="heart small-heart" id="heart5" style="top: 250px; left: 100px;"></div>
        <div class="heart big-heart" id="bigHeart"></div>
        <div class="message">Well done! You won my heart!</div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let hearts = document.querySelectorAll('.small-heart');
            let bigHeart = document.getElementById('bigHeart');
            let message = document.querySelector('.message');
            let poppedHearts = 0;

            hearts.forEach(heart => {
                heart.addEventListener('click', () => {
                    heart.style.display = 'none';
                    poppedHearts++;

                    if (poppedHearts === 5) {
                        bigHeart.style.display = 'block';
                        bigHeart.classList.add('active');
                        message.style.display = 'block';
                    }
                });
            });
        });
    </script>
</body>
</html>
